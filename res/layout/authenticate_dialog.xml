<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
	android:background="#ffffff"
    >
	<ImageView
		android:id="@+id/welcome_logo"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:padding="5px"
		android:src="@drawable/yammer_logo_large"
		/>
	<TextView
		android:id="@+id/loader_status_view"
		android:padding="5px"
		android:text="Welcome! You will now be taken to the Yammer website to authorize this application for use with your account."
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:textColor="#000000"
		android:layout_toRightOf="@id/welcome_logo"
		/>
	<Button
		android:id="@+id/ok_button"
		android:layout_centerHorizontal="true"
		android:layout_width="290dip"
		android:layout_height="wrap_content"
		android:text="OK"
		android:layout_below="@id/welcome_logo"
		/>
</RelativeLayout>
