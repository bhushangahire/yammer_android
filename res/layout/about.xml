<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dip"
    android:layout_height="fill_parent"
	android:background="#ff000000"
	android:padding="10dip"
	android:gravity="center"
    >
	<ImageView
		android:id="@+id/yammer_logo"
		android:layout_centerHorizontal="true"	
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:padding="5px"
		android:src="@drawable/yammer_logo_medium"
		/>
	<TextView
		android:id="@+id/about_text_view"
		android:layout_centerHorizontal="true"	
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#ffffffff"
		android:layout_below="@id/yammer_logo"
		android:textStyle="bold"
		android:autoLink="all"
		android:textColorLink="#ffffffff"
		android:text="@string/about_text"
		/> 
	<TextView
		android:id="@+id/about_text_disclaimer_view"
		android:layout_centerHorizontal="true"	
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#ffaaaaaa"
		android:layout_below="@id/about_text_view"
		android:textSize="11dip"
		android:text="@string/about_disclaimer"
		/> 
</RelativeLayout>
